<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="31dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Appointment"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="22dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/dialogImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/caution"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/dialog_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to cancel appointment ?"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="26dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you want appointment, you can\nreschedule it anytime."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="38dp">

        <Button
            android:id="@+id/dialogOKButton"
            android:layout_width="97dp"
            android:layout_height="47dp"
            app:backgroundTint="#EF5B5B"
            android:text="Yes" />

        <Button
            android:id="@+id/dialogCancelButton"
            android:layout_width="97dp"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#089BAB"
            android:text="No" />

    </LinearLayout>


</LinearLayout>
