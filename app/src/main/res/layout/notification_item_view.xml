<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="30dp"
        android:background="@drawable/card_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_notification"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/card_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:scaleType="centerCrop"
                    android:background="#C4C4C4"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Appointment"
                android:textSize="14sp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/cv_notification"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_notification_short_description"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="22dp"
                android:singleLine="true"
                android:text="Your appointment with Dr. Anna baker (Heart surgeon) at 11 Feb 2022 Time :  10:00 Am Address : Family Care Hospital, Golden Nest Phase 1 Rd, near Seven square academy, Golden Nest Phase 1, Queens Park, Mira Road, Maharashtra 401107"
                android:textSize="10sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/cv_notification"
                app:layout_constraintTop_toBottomOf="@id/tv_notification_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_notification_full_description"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="22dp"
                android:text="Your appointment with Dr. Anna baker (Heart surgeon) at 11 Feb 2022 Time :  10:00 Am Address : Family Care Hospital, Golden Nest Phase 1 Rd, near Seven square academy, Golden Nest Phase 1, Queens Park, Mira Road, Maharashtra 401107"
                android:textSize="10sp"
                android:visibility="gone"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/cv_notification"
                app:layout_constraintTop_toBottomOf="@id/tv_notification_title"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/tv_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:text="02 mins ago"
                android:textSize="12sp"
                android:textColor="#C4C4C4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>