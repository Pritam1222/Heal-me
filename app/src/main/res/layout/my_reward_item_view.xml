<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/selected_reward_toolbar"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="50dp"
    android:layout_marginStart="50dp"
    android:paddingBottom="6dp"
    android:background="@drawable/selected_reward_rectangle">

    <ImageView
        android:id="@+id/iv_my_reward_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/puma_logo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clipToOutline="true"
        android:background="@drawable/circular_background"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/reward_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gift card valued at 10% off at McDonalds."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - - - - - - - - - - - - - - - - - - - - - - "
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="25dp"
        android:src="@drawable/selected_reward_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="25dp"
        android:rotation="180"
        android:src="@drawable/selected_reward_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/expires"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Expires"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/iv_my_reward_icon"/>


    <TextView
        android:id="@+id/tv_expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="04 sept 2021"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expires" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="*Terms and condition apply*"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_expiry_date" />


</androidx.constraintlayout.widget.ConstraintLayout>