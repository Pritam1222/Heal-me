<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HelpSupportFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_help_support"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:backgroundTint="#089BAB"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help And Support"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginEnd="70dp"
            android:textStyle="bold"
            android:gravity="center" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar_help_support"
        >

        <ImageView
            android:layout_width="265dp"
            android:layout_height="265dp"
            android:src="@drawable/help_and_support"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:text="How can we help you?"
            android:textAlignment="center"
            android:textColor="#089BAB"
            android:layout_gravity="center_horizontal"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:src="@drawable/ellipse"
                app:tint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/send_mail"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:padding="10dp"
                android:src="@drawable/message_filled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Send us an email:"
            android:textSize="20sp"
            android:textColor="#C4C4C4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Healme@email.com"
            android:textSize="20sp"
            android:textColor="#089BAB"/>

    </LinearLayout>

</RelativeLayout>